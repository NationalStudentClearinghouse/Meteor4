<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" 
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	 	
	<bean id="viewResolver" class="org.springframework.web.servlet.view.ResourceBundleViewResolver">
		<property name="basename" value="views"/>
	</bean>
	
	<bean class="org.meteornetwork.meteor.provider.ui.MeteorExceptionResolver">
		<property name="uiProviderProperties" ref="UiProviderProperties"/>
		<property name="exceptionMappings">
			<map>
				<entry key="org.meteornetwork.meteor.provider.ui.exception.MeteorAccessException" value="denied"/>
				<entry key="java.lang.Exception" value="error"/>
			</map>
		</property>
		<property name="defaultErrorView" value="error" />
	</bean>
	
	<bean id="handlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"/>
	
	<!-- 
		pages 
	-->
	<bean name="/meteor/query.do" class="org.meteornetwork.meteor.provider.ui.controller.QuerySSNController" autowire="byType">
		<property name="viewName" value="querySsn"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
				<value>LENDER</value>
				<value>APCSR</value>
				<value>BORROWER</value>
			</list>
		</property>
	</bean>
	
	<bean name="/meteor/summary.do" class="org.meteornetwork.meteor.provider.ui.controller.MeteorQueryController" autowire="byType">
		<property name="viewName" value="awardSummary"/>
		<lookup-method name="getSession" bean="meteorSession"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
				<value>LENDER</value>
				<value>APCSR</value>
				<value>BORROWER</value>
			</list>
		</property>
	</bean>
	
	<bean name="/meteor/repaymentSummary.do" class="org.meteornetwork.meteor.provider.ui.controller.MeteorQueryController" autowire="byType">
		<property name="viewName" value="repaymentSummary"/>
		<lookup-method name="getSession" bean="meteorSession"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
				<value>LENDER</value>
				<value>APCSR</value>
				<value>BORROWER</value>
			</list>
		</property>
	</bean>
	
	<bean name="/meteor/aversion.do" class="org.meteornetwork.meteor.provider.ui.controller.MeteorQueryController" autowire="byType">
		<property name="viewName" value="aversion"/>
		<lookup-method name="getSession" bean="meteorSession"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
			</list>
		</property>
	</bean>
	
	<bean name="/meteor/awardDetail.do" class="org.meteornetwork.meteor.provider.ui.controller.AwardDetailController" autowire="byType">
		<property name="viewName" value="awardDetail"/>
		<lookup-method name="getSession" bean="meteorSession"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
				<value>LENDER</value>
				<value>APCSR</value>
				<value>BORROWER</value>
			</list>
		</property>
	</bean>
	
	<bean name="/meteor/disbursement.do" class="org.meteornetwork.meteor.provider.ui.controller.AwardDetailController" autowire="byType">
		<property name="viewName" value="disbursement"/>
		<lookup-method name="getSession" bean="meteorSession"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
				<value>LENDER</value>
				<value>APCSR</value>
				<value>BORROWER</value>
			</list>
		</property>
	</bean>
	
	<bean name="/meteor/references.do" class="org.meteornetwork.meteor.provider.ui.controller.AwardDetailController" autowire="byType">
		<property name="viewName" value="references"/>
		<lookup-method name="getSession" bean="meteorSession"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
				<value>LENDER</value>
				<value>APCSR</value>
				<value>BORROWER</value>
			</list>
		</property>
	</bean>
	
	<bean name="/meteor/repaymentDetail.do" class="org.meteornetwork.meteor.provider.ui.controller.AwardDetailController" autowire="byType">
		<property name="viewName" value="repaymentDetail"/>
		<lookup-method name="getSession" bean="meteorSession"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
				<value>LENDER</value>
				<value>APCSR</value>
				<value>BORROWER</value>
			</list>
		</property>
	</bean>
	
	<bean name="/meteor/consolidated.do" class="org.meteornetwork.meteor.provider.ui.controller.ConsolidatedViewController" autowire="byType">
		<property name="viewName" value="consolidated"/>
		<lookup-method name="getSession" bean="meteorSession"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
			</list>
		</property>
	</bean>
	
	<!-- Use this page to see the raw xml returned by the meteor network. Comment out in production -->
	<bean name="/meteor/rawxml.do" class="org.meteornetwork.meteor.provider.ui.controller.MeteorQueryController" autowire="byType">
		<property name="viewName" value="rawxml"/>
		<lookup-method name="getSession" bean="meteorSession"/>
		<property name="allowedRoles">
			<list>
				<value>FAA</value>
				<value>LENDER</value>
				<value>APCSR</value>
				<value>BORROWER</value>
			</list>
		</property>
	</bean>
</beans> 